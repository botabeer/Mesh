def create_button(label, text, style="secondary", color=None):
    """Ø¥Ù†Ø´Ø§Ø¡ Ø²Ø± Ù…Ø­Ø³Ù‘Ù†"""
    button = {
        "type": "button",
        "action": {
            "type": "message",
            "label": label,
            "text": text
        },
        "style": style,
        "height": "sm"
    }

    if color:
        button["color"] = color

    return button

def create_button_row(buttons, spacing="sm"):
    """Ø¥Ù†Ø´Ø§Ø¡ ØµÙ Ø£Ø²Ø±Ø§Ø±"""
    return {
        "type": "box",
        "layout": "horizontal",
        "spacing": spacing,
        "contents": buttons
