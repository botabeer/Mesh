def create_header(title, subtitle=None, colors=None):
    """Ø¥Ù†Ø´Ø§Ø¡ Ø±Ø£Ø³ Ø§Ø­ØªØ±Ø§ÙÙŠ"""
    if not colors:
        colors = THEMES[DEFAULT_THEME]

    contents = [
        {
            "type": "text",
            "text": title,
            "weight": "bold",
            "size": "xxl",
            "color": colors["primary"],
            "align": "center"
        }
    ]

    if subtitle:
        contents.append({
            "type": "text",
            "text": subtitle,
            "size": "sm",
            "color": colors["text2"],
            "align": "center",
            "margin": "sm"
        })

    return {
        "type": "box",
        "layout": "vertical",
        "contents": contents,
        "spacing": "xs"
    }

def create_card(colors, contents, footer_contents=None, size="mega"):
    """Ø¥Ù†Ø´Ø§Ø¡ Ø¨Ø·Ø§Ù‚Ø© Neumorphic"""
    card = {
        "type": "bubble",
